
<h2>Signup</h2>

<form action="/signup" method="POST">
<label>
    Username:
    <input type="text" name="username" placeholder="Your avatar"/>
</label>
<label>
    Password:
    <input type="password" name="password" placeholder="********"/>
</label>
<button type="submit">Create account</button>
</form>

{{!-- error message if user hasn't provided username or password --}}
{{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
{{/if}}